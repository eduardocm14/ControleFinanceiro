<!-- Modal de Reabertura de Conta -->
<div class="modal fade" id="reopenAccountModal" tabindex="-1" role="dialog" aria-labelledby="reopenAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reopenAccountModalLabel">Reabrir Conta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="reopenAccountForm" method="post" asp-page-handler="Reopen">
                    <input type="hidden" id="reopenAccountId" name="id" />
                    <div class="form-group">
                        <label for="reopenAccountName">Nome</label>
                        <input type="text" id="reopenAccountName" name="Conta.Nome" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label for="reopenAccountValue">Valor</label>
                        <input type="text" id="reopenAccountValue" name="Conta.Valor" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label for="reopenAccountDuedate">Data de Vencimento</label>
                        <input type="date" id="reopenAccountDuedate" name="Conta.DataVencimento" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label for="reopenAccountPassword">Senha</label>
                        <input type="password" id="reopenAccountPassword" name="Senha" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-success w-100">Reabrir Conta</button>
                </form>
            </div>
        </div>
    </div>
</div>

